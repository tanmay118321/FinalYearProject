<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Selected Category -->
    <style name="CategorySelected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#21E40C</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_category_selected</item>
    </style>

    <!-- Unselected Category -->
    <style name="CategoryUnselected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/bg_category_unselected</item>
    </style>
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="DayNormal">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="DaySelected">
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#03A9F4</item>
    </style>



</resources>