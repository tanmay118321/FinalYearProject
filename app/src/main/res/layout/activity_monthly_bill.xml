<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF2F6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Back -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Title -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtTitle"
            android:text="Monthly Bill"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Summary Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSummary"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="TOTAL OUTSTANDING"
                    android:textStyle="bold"
                    android:textColor="#6FA96F"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtAmount"
                    android:text="â‚¹ 0"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtMonth"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txtStatus"
                        android:text="PENDING"
                        android:textStyle="bold"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnPayNow"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="PAY NOW"
                    android:textStyle="bold"
                    android:backgroundTint="#0C98E4"/>

                <Button
                    android:id="@+id/btnDownloadInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Download Invoice"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#FDA6A6"
                    android:textColor="#FFF"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Breakdown -->
        <TextView
            android:id="@+id/txtBreakdown"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Bill Breakdown"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardSummary"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBreakdown"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtBreakdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/breakdownContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <!-- History -->
        <TextView
            android:id="@+id/txtHistory"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="History"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardBreakdown"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtHistory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/historyContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
