<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#F5F5F5">

    <!-- Days Row -->
    <LinearLayout
        android:id="@+id/dayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dayMon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/days_bg"
            android:text="Mon"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dayTue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Tue"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dayWed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Wed"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dayThu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Thu"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dayFri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Fri"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/daySat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Sat"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/daySun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Sun"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Breakfast Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBreakfast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/dayRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutBreakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/txtBreakfastTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBreakfastTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="6dp"
                android:text="Healthy"
                android:textColor="#FFFFFF"
                android:background="#4CAF50" />

            <TextView
                android:id="@+id/txtBreakfastItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Poha" />

            <TextView
                android:id="@+id/txtBreakfastItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Boiled Eggs / Sprouts" />

            <TextView
                android:id="@+id/txtBreakfastItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Tea / Milk" />

            <TextView
                android:id="@+id/txtBreakfastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="⏰ 7:30 AM - 9:30 AM"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Lunch Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLunch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardBreakfast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/txtLunchTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLunchItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Rice / Roti" />

            <TextView
                android:id="@+id/txtLunchItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Dal Fry" />

            <TextView
                android:id="@+id/txtLunchItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Paneer / Chicken Curry" />

            <TextView
                android:id="@+id/txtLunchItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Salad" />

            <TextView
                android:id="@+id/txtLunchTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="⏰ 12:30 PM - 2:30 PM"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Dinner Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardLunch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutDinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/txtDinnerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDinnerItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Roti" />

            <TextView
                android:id="@+id/txtDinnerItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Mixed Veg" />

            <TextView
                android:id="@+id/txtDinnerItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Dal Tadka" />

            <TextView
                android:id="@+id/txtDinnerItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Rice" />

            <TextView
                android:id="@+id/txtDinnerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="⏰ 8:00 PM - 10:00 PM"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
