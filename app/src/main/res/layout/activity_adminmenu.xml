<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayoutMeal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#F4F6F8">

    <!-- Days Row -->
    <LinearLayout
        android:id="@+id/layoutDaysRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/edtMon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Mon"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@drawable/days_bg"
            android:focusable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/edtTue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Tue"
            android:textAlignment="center"
            android:textSize="15sp"
            android:focusable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/edtWed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Wed"
            android:textAlignment="center"
            android:textSize="15sp"
            android:focusable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/edtThu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Thu"
            android:textAlignment="center"
            android:textSize="15sp"
            android:focusable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/edtFri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Fri"
            android:textAlignment="center"
            android:textSize="15sp"
            android:focusable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/edtSat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Sat"
            android:textAlignment="center"
            android:textSize="15sp"
            android:focusable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/edtSun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Sun"
            android:textAlignment="center"
            android:textSize="15sp"
            android:focusable="false"
            android:cursorVisible="false"/>
    </LinearLayout>

    <!-- Breakfast -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBreakfastMeal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDaysRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/edtBreakfastTitle"
                android:text="Breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@null"
                android:focusable="false"/>

            <EditText
                android:id="@+id/edtBreakfastItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Poha\n• Eggs / Sprouts\n• Tea / Milk"
                android:background="@null"
                android:layout_marginTop="6dp"/>

            <EditText
                android:id="@+id/edtBreakfastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ 7:30 AM - 9:30 AM"
                android:textSize="12sp"
                android:background="@null"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Lunch -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLunchMeal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/cardBreakfastMeal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/edtLunchTitle"
                android:text="Lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@null"
                android:focusable="false"/>

            <EditText
                android:id="@+id/edtLunchItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Rice / Roti\n• Dal Fry\n• Paneer / Chicken\n• Salad"
                android:background="@null"
                android:layout_marginTop="6dp"/>

            <EditText
                android:id="@+id/edtLunchTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ 12:30 PM - 2:30 PM"
                android:textSize="12sp"
                android:background="@null"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Dinner -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDinnerMeal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/cardLunchMeal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/edtDinnerTitle"
                android:text="Dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@null"
                android:focusable="false"/>

            <EditText
                android:id="@+id/edtDinnerItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Roti\n• Mixed Veg\n• Dal Tadka\n• Rice"
                android:background="@null"
                android:layout_marginTop="6dp"/>

            <EditText
                android:id="@+id/edtDinnerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ 8:00 PM - 10:00 PM"
                android:textSize="12sp"
                android:background="@null"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/updatebutton"
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
