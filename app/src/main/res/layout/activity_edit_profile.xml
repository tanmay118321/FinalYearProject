<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAF7"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#9E9E9E"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/btnSaveTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#1EC81E"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- Profile Image -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_placeholder"
                app:shapeAppearanceOverlay="@style/CircleImage"/>

            <ImageView
                android:id="@+id/btnChangePhoto"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="6dp"
                android:background="@drawable/bg_green_circle"
                android:padding="8dp"
                android:src="@drawable/ic_camera"
                app:tint="@android:color/white" />
        </FrameLayout>



        <!-- Personal Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:enabled="false"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:layout_marginTop="12dp" />

        <!-- Hostel Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hostel Details"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/etHostel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hostel Name"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/etBlock"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Block"
                android:background="@drawable/bg_input"
                android:padding="14dp" />

            <EditText
                android:id="@+id/etRoom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Room No"
                android:background="@drawable/bg_input"
                android:padding="14dp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Changes âœ“"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#1EC81E"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/btnDiscard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discard Changes"
            android:textColor="#9E9E9E"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
