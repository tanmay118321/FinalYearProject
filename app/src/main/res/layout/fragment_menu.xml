<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F8F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Back -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Profile -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            android:src="@drawable/avatar_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Day Selector -->
        <LinearLayout
            android:id="@+id/daySelector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mon\n12"
                android:padding="12dp"
                android:textColor="#999"
                android:background="@drawable/bg_category_unselected" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TODAY\nTue 13"
                android:padding="12dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/bg_category_selected" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Wed\n14"
                android:padding="12dp"
                android:textColor="#999"
                android:background="@drawable/bg_category_unselected" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thu\n15"
                android:padding="12dp"
                android:textColor="#999"
                android:background="@drawable/bg_category_unselected" />
        </LinearLayout>

        <!-- ================= BREAKFAST ================= -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBreakfast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/daySelector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Breakfast"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:text="Rate"
                        android:textAllCaps="false"
                        android:backgroundTint="#E8F8EC"
                        android:textColor="#2ECC71"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="7:30 AM - 9:30 AM"
                    android:textColor="#777"
                    android:layout_marginTop="4dp"/>

                <View android:layout_height="1dp" android:layout_width="match_parent"
                    android:background="#EEE" android:layout_marginVertical="8dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="â— Masala Dosa"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Served with Sambhar & Coconut Chutney"
                    android:textColor="#777"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â— Coffee / Tea"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Hot beverages"
                    android:textColor="#777"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ================= LUNCH ================= -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLunch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/cardBreakfast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#F7FFF8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸ½ Serving Now"
                    android:textStyle="bold"
                    android:textColor="#1ABC9C"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Lunch"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="â˜… Rate Meal"
                        android:textAllCaps="false"
                        android:backgroundTint="#1AFF00"
                        android:textColor="#000"/>
                </LinearLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="12:30 PM - 2:00 PM"
                    android:textColor="#2ECC71"
                    android:layout_marginTop="4dp"/>

                <View android:layout_height="1dp" android:layout_width="match_parent"
                    android:background="#E0F2E9" android:layout_marginVertical="8dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="â–  Dal Fry & Jeera Rice"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Yellow lentil curry with cumin rice"
                    android:textColor="#777"/>

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â–  Aloo Gobi"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Potato and cauliflower dry curry"
                    android:textColor="#777"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â–  Chapati & Curd"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Whole wheat flatbread"
                    android:textColor="#777"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ================= DINNER ================= -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/cardLunch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Dinner"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Rate"
                        android:textAllCaps="false"
                        android:enabled="false"/>
                </LinearLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="7:30 PM - 9:00 PM"
                    android:textColor="#777"
                    android:layout_marginTop="4dp"/>

                <View android:layout_height="1dp" android:layout_width="match_parent"
                    android:background="#EEE" android:layout_marginVertical="8dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="â–  Egg Curry"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#E74C3C"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Spicy gravy with boiled eggs"
                    android:textColor="#777"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â–  Paneer Butter Masala"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Rich creamy tomato gravy"
                    android:textColor="#777"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
