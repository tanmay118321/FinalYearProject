<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tvHeader"
        android:text="Admin Attendance"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tvLive"
        android:text="LIVE"
        android:textColor="#FF5252"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tvHeader"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Stats -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tvTotal"
        android:text="Total Students Checked In"
        android:textColor="#9E9E9E"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tvCount"
        android:text="450/150"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tvCapacity"
        android:text="75% Capacity"
        android:textColor="#FF9800"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:progress="75"
        android:progressTint="#FF9800"
        android:progressBackgroundTint="#3E2A14"
        app:layout_constraintTop_toBottomOf="@id/tvCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Search -->
    <LinearLayout
        android:id="@+id/searchandpdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/progress"
        >
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:id="@+id/etSearch"
            android:textSize="12sp"
            android:hint="Search student by name or room..."
            android:textColor="@color/black"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExportPdf"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Export PDF"
            android:textSize="10sp"
            android:backgroundTint="@color/biometric_error_color"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/etSearch"
            />
    </LinearLayout>
    <!-- Toggle -->


    <!-- Recent Activity -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tvRecent"
        android:text="Recent Activity"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/searchandpdf"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAttendance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
