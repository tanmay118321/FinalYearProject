<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8F5">

    <!-- TOP BAR -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complaint Management"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <!-- SEARCH -->
    <SearchView
        android:id="@+id/searchBox"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_input"
        android:queryHint="Search by subject, category or status"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- STATS -->
    <LinearLayout
        android:id="@+id/statsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/searchBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/bg_stat_card"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtPendingCount"
                android:text="0"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pending"
                android:textColor="#C9A400"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/bg_stat_card"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtResolvedCount"
                android:text="0"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Resolved"
                android:textColor="#1DB954"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/bg_stat_card"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtCriticalCount"
                android:text="0"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Critical"
                android:textColor="#E53935"/>
        </LinearLayout>
    </LinearLayout>

    <!-- FILTER CHIPS -->
    <HorizontalScrollView
        android:id="@+id/chipScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/statsRow">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="35dp"
                android:layout_width="wrap_content"
                android:id="@+id/btnAll"
                android:text="All"
                android:textSize="12sp"
                android:background="@drawable/bg_chip_active"
                android:textColor="#FFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="35dp"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:id="@+id/btnPending" android:text="Pending"
                android:background="@drawable/bg_chip"
                android:layout_marginStart="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="35dp"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:id="@+id/btnResolved" android:text="Resolved"
                android:background="@drawable/bg_chip"
                android:layout_marginStart="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_height="35dp"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:id="@+id/btnCritical" android:text="Critical"
                android:background="@drawable/bg_chip"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RECYCLER VIEW -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerComplaints"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/chipScroll"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
